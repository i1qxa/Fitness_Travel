<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home_screen.HomeFragment"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/ivTrainingPlan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivWorkout"
        android:src="@drawable/workout_calendar_txt"
        android:scaleType="centerInside"
        android:layout_marginVertical="15dp"
        android:elevation="5dp"
        android:contentDescription="@string/item_background"
        />



    <ImageView
        android:id="@+id/ivWorkout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTrainingPlan"
        app:layout_constraintBottom_toTopOf="@id/ivChart"
        android:src="@drawable/workout_list_text"
        android:scaleType="centerCrop"
        android:layout_marginVertical="15dp"
        android:elevation="5dp"
        android:contentDescription="@string/item_background"
        />


    <ImageView
        android:id="@+id/ivChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWorkout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/chart_workout1_text"
        android:scaleType="centerInside"
        android:layout_marginVertical="15dp"
        android:elevation="5dp"
        android:contentDescription="@string/item_background"
        />





</androidx.constraintlayout.widget.ConstraintLayout>